<% if @memorial_photo.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @memorial_photo.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>ご遺影登録</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: [@user, @memorial_photo], local: true) do |form| %>
            <div class="form-group">
              <%= form.label :photo, "ご遺影の画像" %>
              <%= form.file_field :photo, accept: 'image/*', id: 'photoFile' %>
              <small class="form-text text-muted">※画像を登録してください 登録できる画像は3つまでです</small>
            </div>
            <div class="form-group">
              <%= form.label :comment, "コメント" %>
              <%= form.text_area :comment, rows: 4, class: 'form-control' %>
              <small class="form-text text-muted">画像に関するコメントを残せます。</small>
            </div>
            <div class="actions mt-4">
              <%= form.submit "アップロード", class: "btn btn-primary w-100" %>
            </div>
          <% end %>
          <%= link_to "前の画面に戻る", "/", class: "btn btn-secondary w-100 mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
