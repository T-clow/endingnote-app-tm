<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>お問い合わせ内容確認</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @contact, local: true, data: { turbo: false }, url: done_contacts_path do |form| %>
            <div class="form-group">
              <%= form.hidden_field :name %>
              <p><strong>名前:</strong> <%= @contact.name %></p>
            </div>
            <hr />
            <div class="form-group">
              <%= form.hidden_field :email %>
              <p><strong>メールアドレス:</strong> <%= @contact.email %></p>
            </div>
            <hr />
            <div class="form-group">
              <%= form.hidden_field :content %>
              <p><strong>お問い合わせ内容:</strong><br><%= simple_format(@contact.content) %></p>
            </div>
            <hr />
            <p class="confirmation-message">※この内容で送信します。よろしいですか？</p>
            <div class="d-flex flex-column">
              <%= form.submit "送信", class: "btn btn-primary w-100 mb-2" %>
              <%= form.submit "前の画面に戻る", name: 'back', class: "btn btn-secondary w-100 mt-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
