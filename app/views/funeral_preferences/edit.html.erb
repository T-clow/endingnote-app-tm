<%= form_with(model: @funeral_preference, local: true) do |form| %>
  <% if @funeral_preference.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @funeral_preference.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="mb-0">葬儀設定を編集する</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: @funeral_preference, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :funeral_type, "葬儀の種類", class: 'form-label' %>
              <%= form.select :funeral_type, options_for_select(@funeral_types, @funeral_preference.funeral_type), { include_blank: false }, { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= form.label :budget, "ご予算", class: 'form-label' %>
              <%= form.select :budget, options_for_select(@budgets, @funeral_preference.budget), { include_blank: false }, { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= form.label :invitees, "呼ぶ人", class: 'form-label' %>
              <%= form.select :invitees, options_for_select(@invitees_options, @funeral_preference.invitees), { include_blank: false }, { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= form.label :location, "場所", class: 'form-label' %>
              <%= form.select :location, options_for_select(@locations, @funeral_preference.location), { include_blank: false }, { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= form.label :sect, "宗派", class: 'form-label' %>
              <%= form.select :sect, options_for_select(@sects, @funeral_preference.sect), { include_blank: false }, { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= form.label :remarks, "備考", class: 'form-label' %>
              <%= form.text_area :remarks, rows: 5, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= form.submit "更新", class: "btn btn-primary w-100" %>
            </div>
          <% end %>
          <div class="mt-3">
            <%= button_to '削除', funeral_preference_path(@funeral_preference),method: :delete, data: { confirm: '本当に削除しますか？' },class: "btn btn-danger w-100" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
