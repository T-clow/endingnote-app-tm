<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="mb-0">
            <% if current_user.avatar.attached? %>
              <%= image_tag rails_blob_path(current_user.avatar), class: 'avatar-image' %>
            <% else %>
              <%= image_tag("https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png", class: "avatar-image") %>
            <% end %>
              <%= current_user.username %> 様のご葬儀プラン
              <i class="fas fa-users"></i>
          </h1>
        </div>
        <div class="card-body">
          <p class="card-text"><strong>葬儀の種類:</strong> <%= @funeral_preference.funeral_type %></p>
          <p class="card-text"><strong>ご予算:</strong> <%= @funeral_preference.budget %></p>
          <p class="card-text"><strong>呼ぶ人:</strong> <%= @funeral_preference.invitees %></p>
          <p class="card-text"><strong>場所:</strong> <%= @funeral_preference.location %></p>
          <p class="card-text"><strong>宗派:</strong> <%= @funeral_preference.sect %></p>
          <p class="card-text"><strong>備考:</strong> <%= @funeral_preference.remarks %></p>
          <div class="mt-4">
            <%= link_to edit_user_funeral_preference_path(current_user, @funeral_preference), class: 'btn btn-primary', role: 'button' do %>
              <i class="fas fa-edit"></i><span class="tablet-hide"> 編集</span>
            <% end %>
            <%= link_to  "/", class: "btn btn-secondary w-100 mt-3", role: 'button' do %>
              <i class="fas fa-home"></i><span> トップページへ</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
