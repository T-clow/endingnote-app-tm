<% if resource.errors.any? %>
  <div id="error_explanation" role="alert">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% else %>
  <div id="error_explanation" class="d-none"></div>
<% end %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2><i class="far fa-user-circle"></i> ユーザーログイン</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group text-start">
              <%= f.label :email, 'Eメール', class: 'form-label ml-2 label-bold' %>
              <div class='ml-1 mb-1'>
                <span class="badge badge-info rounded-0">必須</span>
                <small class="text-muted">例:user@example.com</small>
              </div>
              <%= f.email_field :email, class: "form-control bg-light", placeholder: "ご登録のEメールをご入力" %>
            </div>
            <div class="form-group text-start">
              <%= f.label :password, 'パスワード', class: 'form-label ml-2 label-bold' %>
              <div class='ml-1 mb-1'>
                <span class="badge badge-info rounded-0">必須</span>
                <small class="text-muted">英数字６文字以上</small>
              </div>
              <%= f.password_field :password, class: "form-control bg-light", placeholder: "ご登録のパスワードをご入力" %>
            </div>
            <div>
              <%= f.submit "ログイン", class: "btn btn-primary w-100 mt-3" %>
            </div>
          <% end %>
          <%= form_with url: users_guest_sign_in_path, method: :post, local: true do |form| %>
            <%= form.submit "ゲストログイン", class: 'btn btn-outline-success w-100 mt-3' %>
          <% end %>
          <%= link_to 'トップページへ', "/", class: "btn btn-secondary w-100 mt-3" %>
        </div>
      </div>
    </div>
    <div class="col-md-8 mt-3">
      <div class="card text-center py-2">
        <div class="card-text">
          アカウントを持っていない方はこちら<br>
          <%= link_to "新規登録へ", new_user_registration_path, class: "fs-6 my-4 text-decoration-none text-info" %>
        </div>
      </div>
    </div>
  </div>
</div>
