<% if resource.errors.any? %>
  <div id="error_explanation" role="alert">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% else %>
  <div id="error_explanation" class="d-none"></div>
<% end %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2><i class="far fa-user-circle"></i> 新規ユーザー登録</h2>
        </div>
        <div class="card-body">
          <%= form_with model: resource, scope: resource_name, url: registration_path(resource_name), local: true do |f| %>
            <div class="form-group text-start">
              <%= f.label :username, 'ユーザ名', class: 'form-label ml-2 label-bold' %>
              <div class='ml-1 mb-1'>
                <span class="badge badge-info rounded-0">必須</span>
                <small class="text-muted">アプリ上のお名前</small>
              </div>
              <%= f.text_field :username, class: "form-control bg-light", placeholder: "ユーザ名" %>
            </div>
            <div class="form-group text-start">
              <%= f.label :full_name, 'お名前', class: 'form-label ml-2 label-bold' %>
              <div class='ml-1 mb-1'>
                <span class="badge badge-info rounded-0">必須</span>
                <small class="text-muted">フルネーム推奨</small>
              </div>
              <%= f.text_field :full_name, class: "form-control bg-light", placeholder: "お名前" %>
            </div>
            <div class="form-group text-start">
              <%= f.label :email, 'Eメール', class: 'form-label ml-2 label-bold' %>
              <div class='ml-1 mb-1'>
                <span class="badge badge-info rounded-0">必須</span>
                <small class="text-muted">例:user@example.com</small>
              </div>
              <%= f.email_field :email, class: "form-control bg-light", placeholder: "Eメール" %>
            </div>
            <div class="form-group text-start">
              <%= f.label :phone_number, '電話番号', class: 'form-label ml-2 label-bold' %>
              <div class='ml-1 mb-1'>
                <span class="badge badge-info rounded-0">必須</span>
                <small class="text-muted">ハイフン不要</small>
              </div>
              <%= f.telephone_field :phone_number, class: "form-control bg-light", placeholder: "電話番号" %>
            </div>
            <div class="form-group text-start password-container">
              <%= f.label :password, 'パスワード', class: 'form-label ml-2 label-bold' %>
              <div class='ml-1 mb-1'>
                <span class="badge badge-info rounded-0">必須</span>
                <small class="text-muted">英数字６文字以上</small>
              </div>
              <div class="input-group">
                <%= f.password_field :password, id: 'password-1', class: "form-control", placeholder: "パスワードをご入力" %>
                <div class="input-group-append">
                  <button type="button" class="btn" id="toggle-password-1">
                    <i id="password-icon-1" class="fas fa-eye"></i>
                  </button>
                </div>
              </div>
            </div>
            <div class="form-group text-start password-container">
              <%= f.label :password_confirmation, 'パスワード確認', class: 'form-label ml-2 label-bold' %>
              <div class='ml-1 mb-1'>
                <span class="badge badge-info rounded-0">必須</span>
                <small class="text-muted">確認用再度入力</small>
              </div>
              <div class="input-group">
                <%= f.password_field :password_confirmation, id: 'password-2', class: "form-control", placeholder: "確認用パスワードをご入力" %>
                <div class="input-group-append">
                  <button type="button" class="btn" id="toggle-password-2">
                    <i id="password-icon-2" class="fas fa-eye"></i>
                  </button>
                </div>
              </div>
            </div>
            <div>
              <%= button_tag(type: 'submit', class: "btn btn-primary w-100 mt-3", data: { turbo: "false" }) do %>
                <i class="fas fa-user-plus"></i><span> 新規登録</span>
              <% end %>
            </div>
          <% end %>
          <%= link_to  "/", class: "btn btn-secondary w-100 mt-3", role: 'button' do %>
            <i class="fas fa-home"></i><span> トップページへ</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8 mt-3">
      <div class="card text-center py-2">
        <div class="card-text">
          既にアカウントを持っている方はこちら
          <%= link_to "ログインへ", new_user_session_path, class: "fs-6 my-4 text-decoration-none text-info" %>
        </div>
      </div>
    </div>
  </div>
</div>
