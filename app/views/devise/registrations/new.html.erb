<% if resource.errors.any? %>
  <div id="error_explanation" class="alert alert-danger" role="alert">
    <ul>
    <% resource.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class="login-section pt-3">
    <div class="card text-center pt-5 mx-auto" style="width: 23rem;">
      <h1>新規登録画面</h1>
      <div class="card-body">
        <%= form_with model: resource, scope: resource_name, url: registration_path(resource_name), local: true do |f| %>
          <div class="mb-3 mt-4">
            <%= f.label :email, 'Eメール', class: 'form-label' %>
            <%= f.email_field :email, class: "form-control", placeholder: "Eメール" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.label :phone_number, '電話番号', class: 'form-label' %>
            <%= f.telephone_field :phone_number, class: "form-control", placeholder: "電話番号" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.label :full_name, 'お名前', class: 'form-label' %>
            <%= f.text_field :full_name, class: "form-control", placeholder: "お名前" %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.label :username, 'ユーザ名', class: 'form-label' %>
            <%= f.text_field :username, class: "form-control", placeholder: "ユーザ名" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, 'パスワード', class: 'form-label' %>
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード 英数字６文字以上" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, 'パスワード確認', class: 'form-label' %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認" %>
          </div>
          <%= f.submit "新規登録", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
    <div class="card text-center py-2 mt-3 mx-auto" style="width: 23rem;">
      <div class="card-text">
        既にアカウントを持っている方はこちら
        <%= link_to "ログインへ", new_user_session_path, class: "fs-6 my-4 text-decoration-none text-info" %>
      </div>
    </div>
  </div>
</div>
