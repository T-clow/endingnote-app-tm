<% if resource.errors.any? %>
  <div id="error_explanation" class="alert alert-danger" role="alert">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class="login-section pt-3">
    <div class="card text-center pt-5 mx-auto" style="width: 23rem;">
      <h1>プロフィール編集</h1>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class="mb-3 mt-4">
            <%= f.label :email, 'Eメール', class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info">現在、次のEメールアドレスの確認を待っています: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="mb-3 mt-4">
            <%= f.label :phone_number, '電話番号', class: 'form-label' %>
            <%= f.telephone_field :phone_number, class: 'form-control' %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.label :full_name, 'フルネーム', class: 'form-label' %>
            <%= f.text_field :full_name, class: 'form-control' %>
          </div>
          <div class="mb-3 mt-4">
            <%= f.label :username, 'ユーザー名', class: 'form-label' %>
            <%= f.text_field :username, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.file_field :avatar %>
          </div>
          <div class="mb-3">
            <%= f.label :password, '新しいパスワード（変更する場合）', class: 'form-label' %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> 文字以上</em>
            <% end %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation, '新しいパスワードの確認', class: 'form-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, '現在のパスワード（変更を確認）', class: 'form-label' %>
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "更新", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card text-center py-2 mt-3 mx-auto" style="width: 23rem;">
      <div class="card-text">
        アカウントを削除しますか？ 
        <%= button_to "アカウントを削除する", registration_path(resource_name), method: "delete", form: { data: { turbo_confirm: "本当に削除しますか？" } },class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
